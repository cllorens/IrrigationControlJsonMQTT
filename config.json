{
  "name": "Irrigation JSON MQTT SCHEDULER",
  "version": "0.6",
  "slug": "irrigationscheduler",
  "description": "A Scheduler that put the scheduling table in JSON in a MQTT Message",
  "url": "https://github.com/cllorens/IrrigationControlJsonMQTT",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "initialize",
  "panel_icon": "mdi:sprinkler-variant",
  "panel_title": "Irrigation",
  "panel_admin": false,
  "boot": "auto",
  "hassio_api": true,
  "homeassistant_api": true,
  "ingress": true,
  "map": [ "share:rw" ],
  "services": [ "mqtt:need" ],
  "options": {
	"MQTT_Server": {
		"host": "172.17.0.1",
		"user": "mqtt",
		"pass": "Mqtt2020",
		"port": 1883,
		"topic": "irrigation/esclavas"
	},
	"config": {
		"NumSchedules": 10,
		"clear": false
	},
	"debug" : false
  },
  "schema": {
	"MQTT_Server": {
		"host": "str",
		"user": "str",
		"pass": "str",
		"port": "int",
		"topic": "str"
	},
	"config": {
		"NumSchedules": "int",
		"clear": "int"
	},
	"debug" : "bool"
  },
  "webui": "http://[HOST]:[PORT:8199]"
}
